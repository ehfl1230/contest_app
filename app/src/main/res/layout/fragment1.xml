<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <LinearLayout
        android:id="@+id/first_layout"
        android:background="@drawable/round_border_with_color"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"

        android:layout_height="25dp">
<TextView
    android:id="@+id/all"
    android:layout_width="0px"
    android:layout_weight="1"
    android:clickable="true"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:text="전체리스트"/>
        <TextView
            android:id="@+id/bookmark"
            android:layout_width="0px"
            android:layout_weight="1"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:background="@drawable/left_border_with_color"
            android:layout_height="match_parent"
            android:text="즐겨찾기"/>

        <TextView
            android:id="@+id/near"
            android:layout_width="0px"
            android:layout_weight="1"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:background="@drawable/left_border_with_color"
            android:layout_height="match_parent"
            android:text="가까운병원찾기"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:layout_below="@id/first_layout"
        android:orientation="horizontal">
        ﻿
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="10dp" />


            <EditText
                android:id="@+id/search_hospital"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/bottom_border"
                android:textCursorDrawable="@null"
                android:inputType="text"
                android:textColor="#6e6d6d"
                android:windowSoftInputMode="stateAlwaysHidden"  />

            <ImageView
                android:id="@+id/search_hospital_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:paddingRight="6dp"
                android:src="@drawable/iconmonstr_magnifier_2_240" />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_below="@id/first_layout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_above="@id/search_list"
        android:padding="5dp" />

    <ListView
        android:id="@+id/search_list"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="5dp"
        android:divider="#00000000"
        android:layout_below="@id/search_layout"></ListView>
</RelativeLayout>
