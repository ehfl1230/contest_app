<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
       <ImageView
                    android:id="@+id/map_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:clickable="true"
                    android:src="@drawable/add_item_image" />


                <TextView
                    android:id="@+id/dong_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/map_btn"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tel_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dong_name_text"
                    android:paddingLeft="10dp"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/call_phone_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/tel_text"
                    android:layout_alignBottom="@id/tel_text"
                    android:clickable="true"
                    android:src="@drawable/add_item_image"/>

                <TextView
                    android:id="@+id/new_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/call_phone_image"
                    android:paddingLeft="10dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/old_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/new_address_text"
                    android:paddingLeft="10dp"
                    android:textSize="20dp" />

            </RelativeLayout>
        </ScrollView>
</LinearLayout>