<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_border">
    <LinearLayout
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/date_text"
      android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:textStyle="bold"
         android:gravity="center"
        android:textSize="20sp"
         />
        <TextView
            android:id="@+id/aninmal_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/modify_btn"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:paddingTop="1dp"
android:layout_alignParentRight="true"
        android:layout_alignTop="@id/main_title"
        android:tint="@color/blue"
        android:src="@drawable/ic_mode_edit_black_24dp"/>



    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/main_title"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주요 정보"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:paddingBottom="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:paddingTop="1dp"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="병원/약국 정보"
            android:layout_below="@id/item_contents"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border_with_blue"
                android:text="병원"
                android:padding="1dp"
                android:layout_margin="2dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/item_dong_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 정보"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>
