<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/round_border">

    <LinearLayout
        android:id="@+id/main_title"

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#DEF1FF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="0px"
            android:layout_weight="9"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="date_text"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/modify_btn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/main_title"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:padding="4dp"
            android:paddingTop="1dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="@color/blue" />
        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/main_title"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:padding="4dp"
            android:paddingTop="1dp"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:tint="@color/blue" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/main_title2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_title">
        <TableRow
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heal_icon"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_healing_black_24dp"/-->
                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:text="test"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pet_icon"
                    android:tint="@color/dark_gray"
                    android:src="@drawable/ic_pets_black_24dp"/>
                <TextView
                    android:id="@+id/aninmal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </TableRow>


        <TableRow>


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_local_hospital_black_24dp"
                    android:tint="@color/dark_gray"
                    />

                <TextView
                    android:id="@+id/item_dong_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:text="test"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:src="@drawable/ic_home_black_24dp"
                    android:tint="@color/blue5" />

            </LinearLayout>
        </TableRow>
    </TableLayout>



    <TextView
        android:id="@+id/item_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"

        android:textColor="@color/dark_gray"
        android:layout_below="@id/main_title2"
        android:textSize="22sp" />


</RelativeLayout>
