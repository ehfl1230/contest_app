<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soomin.contestproject.AddRecordActivity">

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_border"
        android:hint="@string/title_hint"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="#6e6d6d"
        android:textCursorDrawable="@null"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_border"
        android:gravity="top"
        android:hint="@string/content_hint"
        android:inputType="text"
        android:padding="5dp"
        android:textColor="#6e6d6d"
        android:textCursorDrawable="@null"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/dong_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contents"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/add_record_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/round_border"
            android:padding="5dp"

            android:text="병원/약국명"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_dong"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/add_record_name"
            android:layout_weight="4"

            android:background="@drawable/round_border_with_color"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="병원/약국선택"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dong_info"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/round_border"
            android:padding="5dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_date_btn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/date"
            android:layout_weight="4"
            android:background="@drawable/round_border_with_color"

            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="방문날짜선택"

            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_info"
        android:layout_margin="5dp"
        android:background="@drawable/round_border_with_color"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/save"
        android:textSize="20sp" />
</RelativeLayout>
