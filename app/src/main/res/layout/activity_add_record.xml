<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soomin.contestproject.AddRecordActivity">
    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColor="#6e6d6d"
        android:textCursorDrawable="@null"

        android:hint="중요 정보를 입력해주세요. ex) 반려동물이름, 증상"/>
    <EditText
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/round_border"
        android:inputType="text"
        android:textColor="#6e6d6d"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/title"
        android:textCursorDrawable="@null"
        android:hint="추가 정보를 입력해주세요."/>

    <LinearLayout
        android:id="@+id/dong_info"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_record_name"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_record_tel"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_record_address"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:id="@+id/add_dong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textSize="18dp"
        android:background="@drawable/round_border_with_color"
        android:text="동물병원/약국추가"
        android:clickable="true"
        android:layout_below="@id/contents"
        />
    <TextView
        android:id = "@+id/date"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/add_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방문날짜선택"
        android:layout_margin="1dp"
        android:textSize="18dp"
        android:background="@drawable/round_border_with_color"
        android:clickable="true"
        android:layout_below="@id/add_dong"
        />

    <ImageView
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_below="@id/add_date_btn"
        android:src="@drawable/add_item_image"/>
</RelativeLayout>
