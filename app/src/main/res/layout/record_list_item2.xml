<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7">


            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 정보"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="병원/약국 정보"
                android:layout_below="@id/item_contents"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border_with_blue"
                android:layout_below="@id/title2"
                android:text="병원"
                android:padding="1dp"
                android:layout_margin="2dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/item_dong_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_type"
                android:layout_toRightOf="@id/item_type"
                android:layout_below="@id/title2"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/aninmal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_dong_name"
                android:textSize="18sp" />
<!--
            <TextView
                android:id="@+id/item_dong_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_dong_name"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/item_call_btn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/item_dong_tel"
                android:src="@drawable/iconmonstr_phone_3_240" />-->
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
