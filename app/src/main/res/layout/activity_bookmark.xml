<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
>
    <RelativeLayout
        android:id="@+id/no_data2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:gravity="center"  >
        <ImageView
            android:id="@+id/bunny"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:tint="@color/gray"
            android:src="@drawable/bunny"
            />
        <TextView
            android:id="@+id/msg2"
            android:layout_below="@id/bunny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:text="\n 즐겨찾기 목록이 없습니다."/>
        <TextView
            android:layout_below="@id/msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:text="즐겨찾기를 추가해주세요."/>
    </RelativeLayout>
    <ListView
        android:id="@+id/search_list"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="5dp"
        android:divider="#00000000"></ListView>


    <TextView
        android:id="@+id/save_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/round_border_with_color"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/save"
        android:textSize="20sp"  />

</RelativeLayout>
